<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.happy.sqlMapper.HappyAreaProvinceMapper">
	<resultMap id="BaseResultMap" type="com.happy.entity.HappyAreaProvinceEntity">
		<result column="hp_province_id" property="hpProvinceId"/>
		<result column="province_code" property="provinceCode"/>
		<result column="province_name" property="provinceName"/>
	</resultMap>
	<insert id="insert" useGeneratedKeys="true" keyProperty="hpProvinceId" parameterType="com.happy.entity.HappyAreaProvinceEntity">
		insert into happy_area_province(province_code,province_name)
		 values (#{provinceCode},#{provinceName});
	</insert>
	<select id="selectByPK" resultMap="BaseResultMap" parameterType="long">
		select * from happy_area_province where hp_province_id=#{hpProvinceId}
	</select>
	<select id="selectAll" resultMap="BaseResultMap" >
		select * from happy_area_province
	</select>
	<select id="selectAllIsUse" resultMap="BaseResultMap" >
		select * from happy_area_province
	</select>
	<update id="updateByPK" parameterType="com.happy.entity.HappyAreaProvinceEntity">
		update happy_area_province
		<set>
			<if test="provinceCode!=null">
				province_code=#{provinceCode},
			</if>
			<if test="provinceName!=null">
				province_name=#{provinceName},
			</if>
		</set>
		 where hp_province_id=#{hpProvinceId}
	</update>
	<delete id="deleteByPK"  parameterType="long">
		delete from happy_area_province where hp_province_id=#{hpProvinceId}
	</delete>
</mapper>
